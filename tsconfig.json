{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false, // Disables errors for 'any' types
    "noEmit": false,
    "noEmitOnError": false,  // Add this line
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "noUnusedLocals": false,  // Optional: add to ignore unused local errors
    "noUnusedParameters": false // Optional: add to ignore unused parameter errors
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/actions/addTodo.js", "next.config.js"],
  "exclude": ["node_modules"]
}
